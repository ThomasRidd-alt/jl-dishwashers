  "license": "ISC",
  "dependencies": {
    "concurrently": "^5.0.0",
    "express": "^4.17.1",
    "node-fetch": "^2.6.1"
  },
  "devDependencies": {
    "flush-promises": "^1.0.2",
    "node-sass": "^4.14.1",
    "nodemon": "^1.19.3"
  }
}
